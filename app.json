{
  "expo": {
    "owner": "camilocuenca",
    "name": "PomoTimerFlow",
    "slug": "PomoTimerFlow",
    "version": "1.3.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "pomotimerflow",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "experiments": {
      "baseUrl": "/"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.camilocuenca.PomoTimerFlow",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSUserTrackingUsageDescription": "Este identificador se usará para ofrecer anuncios personalizados."
      },
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-6679191668109166~1702785206"
      }
    },
    "android": {
      "versionCode": 4,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.camilocuenca.PomoTimerFlow",
      "permissions": [
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_MEDIA_PLAYBACK",
        "com.google.android.gms.permission.AD_ID"
      ],
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-6679191668109166~1702785206"
      },
      "manifest": {
        "$": {
          "xmlns:tools": "http://schemas.android.com/tools"
        },
        "application": {
          "meta-data": [
            {
              "android:name": "com.google.android.gms.ads.DELAY_APP_MEASUREMENT_INIT",
              "android:value": "false",
              "tools:replace": "android:value"
            }
          ]
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static",
      "meta": [
        {
          "name": "description",
          "content": "PomoTimerFlow: Temporizador Pomodoro online gratis. Mejora tu productividad con la técnica Pomodoro, controla tus tareas y alcanza tus metas fácilmente."
        },
        {
          "name": "keywords",
          "content": "pomodoro, temporizador, timer, técnica pomodoro, productividad, tareas, enfoque, estudio, trabajo, app pomodoro, pomodoro timer"
        },
        {
          "name": "author",
          "content": "CamiloCuencaDev"
        },
        {
          "property": "og:title",
          "content": "PomoTimerFlow - Temporizador Pomodoro"
        },
        {
          "property": "og:description",
          "content": "Temporizador Pomodoro online gratis para mejorar tu productividad y enfoque."
        },
        {
          "property": "og:type",
          "content": "website"
        },
        {
          "property": "og:image",
          "content": "https://pomo-timer-flow.vercel.app/assets/icon.png"
        },
        {
          "property": "og:url",
          "content": "https://pomo-timer-flow.vercel.app"
        }
      ],
      "title": "PomoTimerFlow - Temporizador Pomodoro"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon-mini.png",
          "color": "#F54E4E"
        }
      ],
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            "customBuildFlags": [
              "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
            ]
          }
        }
      ],
      [
        "expo-audio",
        {
          "recordAudioAndroid": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ],
      "expo-router",
      "expo-asset",
      "expo-localization",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-6679191668109166~1702785206",
          "iosAppId": "ca-app-pub-6679191668109166~1702785206",
          "userTrackingUsageDescription": "Este identificador se usará para ofrecer anuncios personalizados."
        }
      ],
      "expo-build-properties"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4c07fa35-e14a-4cb2-8f43-4b0d3d35f80f"
      }
    }
  },
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-6679191668109166~1702785206"
  }
}
