{
  "name": "pomodoroflow",
  "version": "1.2.0",
  "main": "expo-router/entry",
"scripts": {
  "start": "expo start --clear",
  "android": "expo start --android",
  "ios": "expo start --ios",
  "web": "expo start --web",
  "clear": "expo start -c",
  "build:web": "npx expo export --platform web --output-dir dist",
  "fix:paths": "powershell -Command \"(Get-Content dist/index.html) -replace '\"/_expo/','\"./_expo/' | Set-Content dist/index.html\"",
  "deploy": "npm run build:web && npm run fix:paths && copy privacy-policy.html dist\\privacy-policy.html && gh-pages -d dist"
},
